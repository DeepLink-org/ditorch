[flake8]
exclude =venv

max-line-length = 140
per-file-ignores =
    op_tools/test/*.py: F401, F841, E501
# F401 'torch_npu' imported but unused
# F841 local variable 'e' is assigned to but never used
#ignore = E501,F401,F841,W503,C901
max-complexity = 12
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,